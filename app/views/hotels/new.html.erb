<section class="container js-load-map">
  <div id="title" class="col-md-12 col-xs-12">
    <h2>New hotel</h2>
  </div>
  <% if flash_message != "" %>
    <%= flash_message %>
  <% end %>
  <form action="/hotels" method="post" class="hotel-new">
    <input type="hidden" id="latLng" name="[hotel][latLng]">
    <div class="col-md-10 col-xs-10">
      <label for="get-places">Hotel</label>
      <input type="text" name="get-places" id="get-places" placeholder="">
    </div>
    <div class="col-md-2 col-xs-2">
      <button type="submit" class="btn" disabled>Save</button>
    </div>
    <div class="pull-left col-md-4 col-xs-4 margin-bottom">
      <label for="name">Name</label><br>
      <input type="text" id="name" name="[hotel][name]">
    </div>
    <div class="pull-right col-md-8 col-xs-8 margin-bottom">
      <label for="name">Address</label><br>
      <input type="text" id="address" name="[hotel][address]" class="txt-address">
    </div>
    <div class="pull-left col-md-4 col-xs-4 margin-bottom">
      <label for="price">Price</label><br>
      <input type="text" id="price" name="[hotel][price]">
    </div>
    <div class="pull-right col-md-8 col-xs-8 margin-bottom">
      <label for="website">Web</label><br>
      <input type="text" id="website" name="[hotel][website]" class="txt-address">
    </div>
    <div class="pull-left col-md-4 col-xs-4 margin-bottom">
      <label for="city">City</label><br>
      <select id="city_id" name="[hotel][city_id]">
        <% @cities.each do |city| %>
          <option value="<%= city.id %>"><%= city.name %></option>
        <% end %>
      </select>
    </div>
  </form>
  <div class="col-md-12 col-xs-12">
    <div id="loading" class="pull-left col-md-12 col-xs-12 text-center hotel-new">
      <%= image_tag('loader.gif') %>
      <p>Loading map...</p>
    </div>
    <div id="map" class="pull-left col-md-12 col-xs-12 hotel-new"></div>
  </div>
</section>